      </div>


      </div>
      <section class="mt-10" style="position: relative; height: 70vh;">
        <div id="bg-gif1" class="z-5">
        </div>
      </section>
      <h3 class="text-primary text-5xl text-white ms-20 text-bold">ค้นหาสินค้าที่ใช่สำหรับคุณ</h3>
      <p class="text-primary text-xl mt-5 text-white ms-20">ปรับแต่งทุกจังหวะการพิมพ์ให้เข้ากับสไตล์ของคุณ</p>

      <div class="grid grid-cols-4 gap-7 text-center mt-10 my-10 text-white">
        <% if (products && products.length> 0) { %>
          <% products.forEach(product=> { %>
            <div class="h-[420px] wrap3 inline-block">
              <a href="/buy/<%= product.prod_id %>">
                <div class="flex justify-center" style="position: absolute;width: 100%;height: 100%;">
                  <img src="<%= product.img1 %>" class="img-back text-center">
                  <img src="<%= product.img2 %>" class="img-front">
                </div>
                <div class="flex items-end p-10 mt-10 text-start justify-center"
                  style="position: absolute;width: 100%;height: 100%;">
                  <div class="mt-4 inline-block text-center">
                    <p class="text-3xl text-brand">
                      <%= product.name %>
                    </p>
                    <p class="text-des">
                      <%= product.price %> บาท
                    </p>
                  </div>
                </div>
              </a>
            </div>
            <% }); %>
              <% } else { %>
                <p class="text-center text-white">No products available.</p>
                <% } %>
      </div>
  </body>
