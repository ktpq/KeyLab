<%- include('partials/headHtml') %>

    <body class="bg-primary text-primary">
        <%- include('partials/nav.ejs') %>

            <div class="text-center flex justify-center mt-10">
                <form action="/addToCart">
                <% product.forEach(product=> { %>
                    
                    <div class="grid md:grid-cols-2 text-white w-[80%] sm:grid-cols-1">
                        <div class="h-[50vh] text-center">
                            <div class="flex justify-center">
                                <img src="<%= product.img1 %>" class="text-center" style="height: 50vh;">
                            </div>
                        </div>
                        <div class="text-start">
                            <h3 class="text-2xl">ปรับแต่งตามที่ต้องการ</h3>
                            <h1 class="text-5xl mt-3 text-brand">
                                <%= product.name %>
                            </h1>
                            <h3 class="text-3xl mt-4 text-brand">
                                <%= product.price %> <span class="text-primary ms-3">บาท</span>
                            </h3>
                            <h5 class="text-xl mt-4 text-brand">
                                <%= product.description %>
                            </h5>
                            
                            <h2 class="text-2xl mt-4">จำนวน</h2>
                            <input type="text" name="prodId" class="text-black hidden" value="<%= product.prod_id %>" name="prod_id">
                            <input type="text" placeholder="ใส่จำนวน" class="text-black mt-2" style="border-radius: 10px;" name="quantity">
                            <br>
                            <button class="add-btn mt-4 btn-1" style="cursor: pointer;" type="submit">เพิ่มในตระกร้า</button>
                            
                        </div>
                    </div>
                    
                    <% }); %>
                </form>
            </div>

            <h3 class="text-5xl text-white mt-10 text-bold text-center">สินค้าที่่คุณอาจสนใจ</h3>
            <div class="grid grid-cols-4 gap-7 text-center mt-10 my-10 text-white">
                <% if (relatedProducts && relatedProducts.length> 0) { %>
                    <% relatedProducts.forEach(related=> { %>
                        <div class="h-[420px] wrap3 inline-block">
                            <a href="/buy/<%= related.prod_id %>">
                                <div class="flex justify-center" style="position: absolute;width: 100%;height: 100%;">
                                    <img src="<%= related.img1 %>" class="img-back text-center">
                                    <img src="<%= related.img2 %>" class="img-front">
                                </div>
                                <div class="flex items-end p-10 mt-10 text-start justify-center"
                                    style="position: absolute;width: 100%;height: 100%;">
                                    <div class="mt-4 inline-block text-center">
                                        <p class="text-3xl text-brand">
                                            <%= related.name %>
                                        </p>
                                        <p class="text-des">
                                            <%= related.price %> บาท
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <p class="text-center text-white">No products available.</p>
                                <% } %>
            </div>
