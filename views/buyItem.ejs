<%- include('partials/headHtml') %>

    <body class="bg-primary">
        <%- include('partials/nav.ejs') %>

            <div class="container mx-auto px-4 py-8">
                <form action="/addToCart">
                    <% product.forEach(product=> { %>
                        <div class="grid md:grid-cols-2 gap-8 sm:grid-cols-1 max-w-6xl mx-auto ">
                            <!-- Product Image Section -->
                            <div class="flex justify-center items-center h-[50vh] ">
                                <img src="<%= product.img1 %>" alt="<%= product.name %>"
                                    class="max-h-full object-contain rounded-xl">
                            </div>

                            <!-- Product Info Section -->
                            <div class="text-white flex flex-col space-y-4 text-start p-4">
                                <h1 class="text-5xl text-brand">
                                    <%= product.name %>
                                </h1>
                                <h3 class="text-3xl text-brand">
                                    <%= product.price %> <span class="text-primary ms-3">บาท</span>
                                </h3>
                                <h5 class="text-xl text-brand">
                                    <%= product.description %>
                                </h5>

                                <div class="mt-6">
                                    <h2 class="text-2xl text-white">จำนวน</h2>
                                    <input type="hidden" name="prodId" value="<%= product.prod_id %>">
                                    <input type="text" placeholder="ใส่จำนวน" class="text-black mt-2 px-4 py-2 w-32"
                                        style="border-radius: 10px;" name="quantity">
                                    <div class="mt-4">
                                        <button class="add-btn btn-1 px-6 py-2 rounded-xl" style="cursor: pointer;" type="submit">
                                            เพิ่มในตระกร้า
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </form>
            </div>

            <h3 class="text-5xl text-white mt-10 text-bold text-center">สินค้าที่่คุณอาจสนใจ</h3>
            <div class="grid grid-cols-4 gap-7 text-center mt-10 my-10 text-white">
                <% if (relatedProducts && relatedProducts.length> 0) { %>
                    <% relatedProducts.forEach(related=> { %>
                        <div class="h-[420px] wrap3 inline-block">
                            <a href="/buy/<%= related.prod_id %>">
                                <div class="flex justify-center" style="position: absolute;width: 100%;height: 100%;">
                                    <img src="<%= related.img1 %>" class="img-back text-center">
                                    <img src="<%= related.img2 %>" class="img-front">
                                </div>
                                <div class="flex items-end p-10 mt-10 text-start justify-center"
                                    style="position: absolute;width: 100%;height: 100%;">
                                    <div class="mt-4 inline-block text-center">
                                        <p class="text-3xl text-brand">
                                            <%= related.name %>
                                        </p>
                                        <p class="text-des">
                                            <%= related.price %> บาท
                                        </p>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <% }); %>
                            <% } else { %>
                                <p class="text-center text-white">No products available.</p>
                                <% } %>
            </div>
