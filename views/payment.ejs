<%- include('partials/headHtml')%>

<body class="bg-third text-white text-primary">
    <%- include('partials/navUser')%>
<div class="grid grid-cols-2 text-center gap-5 min-h-[850px]">
    <div class="">
        <div class="flex justify-center p-10 flex-col">
            <img src="/image/gif-background.gif" class="text-center">
            <a href="/confirmOrder?data=<%= encodeURIComponent(JSON.stringify(data)) %>" class="border bg-green-600"> ดำเนินการต่อ </a>
          </div>
    </div>
    <div class="">

        <div class="grid grid-cols-6 pl-10 pr-10 pt-10 pb-0 text-center p-5 h-[55%] overflow-y-auto">
            <div class="underlinecl text-xl">
                <h3>ลำดับ</h3>
            </div>
            <div class="underlinecl text-xl">
                <h3>สินค้า</h3>
            </div>
            <div class="underlinecl text-xl">
                <h3>ชื่อ</h3>
            </div>
            <div class="underlinecl text-xl">
                <h3>ราคา</h3>
            </div>
            <div class="underlinecl text-xl">
                <h3>จำนวน</h3>
            </div>
            <div class="underlinecl text-xl">
                <h3>รวม</h3>
            </div>
            
            <!-- แก้ไข ข้อมูล ข้างล่างนี้ -->
            
            <% data.forEach((item) => {%>
            <div class="underlinedes">
                <h3>1</h3>
            </div>
            <div class="underlinedes">
                <img src="<%= item.img %>" class="">
            </div>
            <div class="underlinedes">
                <h3><%= item.name %></h3>
            </div>
            <div class="underlinedes">
                <h3><%= item.price %></h3>
            </div>
            <div class="underlinedes">
                <h3><%= item.quantity %></h3>
            </div>
            <div class="underlinedes">
                <h3><%= item.totalPrice %>฿</h3>
            </div>

            <% })%>
            
            

            
            
        </div>
        <div class="text-end pr-20 pt-5 upperline">
            <h3 class="text-2xl mr-10">รวม <span><%= totalAmount %>฿</span></h3>
        </div>
        <div class="grid grid-cols-2 mt-10">
            <div class="text-3xl">
                <h3>แสกน QR code เพื่อแจ้งสลิปทางไลน์</h3>
                <h3>line:keylab</h3>
            </div>
            <div class="p-10">
                <img src="/image/switch.webp">
            </div>
        </div>
    </div>
</div>
    
</body>

<%- include('partials/footHtml')%>