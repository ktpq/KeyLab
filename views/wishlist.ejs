<%- include('partials/headHtml') %> 
<body class="bg-third text-primary">
    <%- include('partials/navUser') %>
    <section class="min-h-[600px]">
        <h1 class="text-white text-5xl mt-5 text-center"> รายการโปรด </h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-7 text-center mt-10 my-10 text-white">
            <% if (wishlist.length > 0) { %>
                <% wishlist.forEach(product => { %>
                    <div class="h-[420px] wrap3 inline-block">
                        <a href="/buy/<%= product.prod_id %>">
                            <div class="flex justify-center"
                                style="position: absolute;width: 100%;height: 100%;">
                                <img src="<%= product.img1 %>" class="img-back text-center">
                                <img src="<%= product.img2 %>" class="img-front">
                            </div>
                            <div class="flex items-end p-10 text-start justify-center"
                                style="position: absolute;width: 100%;height: 100%;">
                                <div class="mt-4 inline-block text-center">
                                    <p class="text-3xl text-brand">
                                        <%= product.name %>
                                    </p>
                                    <p class="text-des">
                                        <%= product.price %> บาท
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-center text-white">No items in your wishlist.</p>
            <% } %>
        </div>
    </section>
</body>
<%- include('partials/footHtml') %>
