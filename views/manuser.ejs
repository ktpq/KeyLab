        <div class="underlinedes">
            <h3><%= user.email %></h3>
        </div>
        <div class="underlinedes">
            <h3><%= user.order_count %></h3>
        </div>
        <div class="underlinedes">
            <h3><%= user.address %></h3>
        </div>
        <div class="underlinedes">
            <a class="bg-white text-black w-[20%] h-[100%] px-5" href="/deleteUser?id=<%= user.user_id %>">ลบข้อมูล</a>
        </div>
        <% })%>
