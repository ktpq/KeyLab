<%- include('partials/headHtml')%>

<body class="bg-third text-white text-primary">
    <%- include('partials/navAdmin')%>
    
    <div class="min-h-[600px]">
        <h3 class="text-5xl ms-20 mt-10">บัญชีผู้ใช้งาน</h3>
    <div class="grid grid-cols-4 P-10 text-center p-5">

        <div class="underlinecl text-3xl">
            <h3>อีเมล</h3>
        </div>
